#!groovy
pipeline {
    agent { label 'argon-fs' }

    options {
        buildDiscarder(
            logRotator(
                daysToKeepStr: "21",
                numToKeepStr: "50",
                artifactDaysToKeepStr: "21",
                artifactNumToKeepStr: "50"
            )
        )
    }
    stages {
        stage('checkout') {
            steps {
                dir('octotiger') {
                    sh '''
                    echo "Git commit ${GIT_COMMIT} ?"
                    srun -p knl -N 1 -n 1 -t 03:00:00 bash -c "cd /scratch && \
                    cd jenkins/octotiger && rm -rf octotiger && rm -rf OctoTigerBuildChain && \
                    git clone https://github.com/STEllAR-GROUP/octotiger.git && \
                    cd octotiger && git submodule update --init --recursive && git checkout ${GIT_COMMIT} && cd - && \
                    git clone https://github.com/STEllAR-GROUP/OctoTigerBuildChain && cd OctoTigerBuildChain/ && \
                    git checkout jenkins-knl && mkdir src && cp -r ../octotiger src/octotiger &&
                    cd src && curl -u "qE2mrmzt6rAreW5:${test_pw}" -H 'X-Requested-With: XMLHttpRequest' 'https://ipvs.informatik.uni-stuttgart.de/cloud/public.php/webdav/' -o silo.tar.gz && \
                    tar -xvf silo.tar.gz && mv silo-4.10.2 silo && rm silo.tar.gz && cd .. "
                    '''
                }
            }
        }
        stage('build') {
            steps {
                sh '''
                srun -p knl -N 1 -n 1 -t 03:00:00 bash -c "cd /data/scratch/jenkins/octotiger/OctoTigerBuildChain && ./build-all.sh Release with-CC without-cuda without-mpi without-papi without-apex with-kokkos with-simd without-hpx-backend-multipole without-hpx-backend-monopole without-hpx-cuda-polling "
                '''
            }
        }
        stage('ctests') {
            steps {
                sh '''
                srun -p knl -N 1 -n 1 -t 03:00:00 bash -c "cd /data/scratch/jenkins/octotiger/OctoTigerBuildChain/build/octotiger/build && ctests"
                '''
            }
        }
    }
}
